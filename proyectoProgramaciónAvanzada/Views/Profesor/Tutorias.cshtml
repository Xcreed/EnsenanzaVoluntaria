@model IEnumerable<proyectoProgramaciónAvanzada.Models.TUTORIA_CURSOS>
@using proyectoProgramaciónAvanzada.Controllers

@{
    ViewBag.Title = "Tutorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>

    <div class="container">

        <h2 style="text-align:center">Tutorías</h2>
        <div id="cuadro" style="margin: 10px;">

            <table class="table">
                <tr style="background-color:#e0e0e0">
                    <th>
                        @Html.DisplayNameFor(model => model.DESCRIPCION)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FECHA_HORA)
                    </th>
                    <th>
                        @Html.DisplayName("Curso")
                    </th>
                    <th>
                        @Html.DisplayName("Institución")
                    </th>
                    <th>
                        @Html.DisplayName("Estudiante")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            var nombreCompleto = item.USUARIOS.NOMBRE + " " + item.USUARIOS.APELLIDO1 + " " + item.USUARIOS.APELLIDO2;
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.DESCRIPCION)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FECHA_HORA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CURSOS.NOMBRE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.INSTITUCION.NOMBRE)
                        </td>
                        <td>
                            @nombreCompleto
                        </td>
                    </tr>
                }

            </table>

            <div>

                @Html.ActionLink("Volver", "RegistrarEstudiante", "Profesor", null, new { @class = "waves-effect waves-light btn-small", style = "display:block; margin:auto; width: 90px; margin-top: 25px " })


            </div>


        </div>
        </div>
</section>


